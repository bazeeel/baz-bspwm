
# Bspwm keybinds

super + {_,shift + } Return
    {$TERMINAL, bspwmfloat && $TERMINAL}

# Dmenu2 and rofi(window switcher, application launcher)
super + {_,shift + } d
    {dmenu_run -i -p 'Search' -nb '#2f2b26' -sb '#2e8b57' -fn 'JetBrains Mono Medium-12' -w '760' -h '24' -x '574' -y '48'
, rofi --show run}

# Tui filemanager and same command wirh sudo
super + {_,shift + } r
   {$TERMINAL -n $FILE -c $FILE -e $FILE, $TERMINAL -n $FILE -c $FILE -e sudo $FILE}

# Application show binds/default editor
super + {_,shift + } e
    {dbind, subl3}

# dmenu manual search, spotify
super + {_,shift + } m
    {dman, spotify}

# News, tui music player
super + {_,shift + } n
    {$TERMINAL -e newsboat, bspwmfloat && $TERMINAL -g 76x30-15-20 -e ncmpcpp}

# Htop,gtop system monitor
super + {_,shift + } i
    {$TERMINAL -e htop, $TERMINAL -e gtop}

# S,R,lock script,calendar app
super + {_,shift + } c
    {power, $TERMINAL -g 70x20-16+30 -e calcurse}

# Default web browser firfox,and brave
super + {_,shift + } w
    {$BROWSER, brave}

# Chat client, gui filemanager
super + {_,shift + } p
    {discord, pcmanfm}


# Wallpaper changer(you need some .jpg or .png in your Pictures folder)
super + {_,shift + } a
    {wal.sh, $TERMINAL -e ncspot}


# Hide polybar/Reload bspwm
super + {_,shift + } b
    {polybar-msg cmd toggle, ~/.config/bspwm/bspwmrc &}

# Reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd


# Close window
super + q
   xdo close

# emojimenu "get a menu of emojis to copy"
super + grave
    dmenuunicode

# Kill screenkey
super + Scroll_Lock
    killall screenkey || screenkey


# Record audio or video
super + Home
    dmenurecord

# kill active recording
super + shift + End
    dmenurecord kill



# ALT + KEYS
# On/off transparency, pavucontrol
alt + {_,shift + } a
   {toggleprogram "picom -b", pavucontrol}


# FUNCTION KEYS
# Increase padding +40
super + F1
    bspc config right_padding 40;\
    bspc config left_padding 40 ;\
    bspc config top_padding 40 ;\
    bspc config bottom_padding 40


# Edit important conf files with sublime editor
super + F2
  edconf.sh


# Change display
super + F3
    displayselect

# Decrease padding 0
super + F4
    bspc config right_padding 0;\
    bspc config left_padding 0 ;\
    bspc config top_padding 22 ;\
    bspc config bottom_padding 1


# Start cava if you installed it
super + F6
    bspwmfloat && $TERMINAL -e cava


# Take screenshot
super + F7
    maim pic-full-$(date '+%y%m%d-%H%M-%S').png

# Pick screenshot type
super + F8
    maimpick


# Mount a USB drive or Android device
super + F9
    dmenumount


# Unmount a USB drive or Android device
super + F10
    dmenuumount


# Search with Duckduckgo
super + F11
    ducksearch


# Mpv floating
super + F12
    mpv --geometry=40%+30+30 --title="mpvfloat" https://www.youtube.com/watch?v=_bOKCbPN3cg&list=RD_bOKCbPN3cg&start_radio=1



# Volume Control
# Decrease volume -5
F10
    amixer set Master 5%-

# Increase volume +5
F11
    amixer set Master 5%+

# Mute volume
F12
   amixer set Master toggle


# BSPWM LAYOUT KEYS


#Focus selected desktop FOR QWERTY KEYBOARDS
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'


#Move window to selected desktop FOR QWERTY KEYBOARDS
super + shift + {1-9,0}
    id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}}


#Focus selected desktop
alt + Tab
	bspc desktop -f '^{1-9,10}'


#Focus selected desktop
super + Tab
	bspc desktop -f '^{1-9,10}'


# Focus next/previous window
ctrl + alt + Left
	bspc node --focus west


# Focus next/previous window
ctrl + alt + Right
	bspc node --focus east


# Focus Up window
ctrl +alt + Up
	bspc node --focus north


# Focus Down window
ctrl + alt + Down
	bspc node --focus south


# Focus/swap windows by direction
super + {_,shift + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}


# Focus/swap windows by direction
ctrl + super + {Left,Down,Up,Right}
	bspc node --{focus} {west,south,north,east}


# Flip layout vertically/horizontally
super + {_,shift + }a
	bspc node @/ --flip {vertical,horizontal}


# Expand tiled space
alt + shift + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}


# Contract tiled space
super + ctrl + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}


# Increase/decrease window gap on focused desktop
super + bracket{left,right}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))


# Move floating window
super + alt + {_,shift + }{Left,Down,Up,Right}
	~/.config/bspwm/scripts/move-window {_,edge-}{west,south,north,east}


# set the window state
super + space
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}


# Focus parent/brother/first/second for preselection
super + ctrl + {e,r,t,y}
	bspc node --focus @{parent,brother,first,second}


# Preselect the splitting area for next window on leaf/parent
super + ctrl + {u,i,o,p}
	bspc node --presel-dir \~{west,south,north,east}


# Define splitting ratio for next window on leaf/parent
super + ctrl + {_,shift +}{1-9}
	bspc node {_,@/} --presel-ratio 0.{1-9}


# Cancel preselection
super + ctrl + space
	bspc node --presel-dir cancel


#Toggle pseudo tiling of window/Toggle fullscreen
super + {_,shift + } f
    {bspfullscreen &, bspc node --state \~pseudo_tiled, bspc node focused.tiled -t floating || bspc node focused.floating -t tiled}


# Make a windoww sticky/non-sticky
super + o
    bspc node -g sticky={on,off}



